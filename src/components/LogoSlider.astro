---
import {
  SVGCss,
  SVGExpress,
  SVGHtml5,
  SVGJs,
  SVGMySql,
  SVGNextJs,
  SVGNode,
  SVGPostgreSql,
  SVGPrisma,
  SVGReact,
  SVGRedis,
} from "./../assets/svg/skills";

const logos = [
  SVGCss,
  SVGExpress,
  SVGHtml5,
  SVGJs,
  SVGMySql,
  SVGNextJs,
  SVGNode,
  SVGPostgreSql,
  SVGPrisma,
  SVGReact,
  SVGRedis
];
---
<ul class="slider">
  <div class="slide-track">
    {
      logos.map((Logo) => (
        <div class="item">
          <div>
            <Logo />
          </div>
        </div>
      ))
    }
    {
      logos.map((Logo) => (
        <div class="item">
          <div>
            <Logo/>
          </div>
        </div>
      ))
    }
  </div>
</ul>
<style>
  .slider {
    height: 100px;
    position: relative;
    width: 100%;
    display: grid;
    place-items: center;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      rgba(0, 0, 0, 0) 0%,
      rgb(0, 0, 0) 10%,
      rgb(0, 0, 0) 90%,
      rgba(0, 0, 0, 0)
    );
  }

  .slide-track {
    display: flex;
    width: calc(90px * 22);
    animation: scroll 30s linear infinite;
  }

  .item {
    width: 90px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    perspective: 100px;
  }
  .item > div {
    @apply bg-[#242424] dark:bg-[#eef0f1] transition-colors duration-100;
    height: 75px;
    aspect-ratio: 1;
    transition: transform 1s;
    border-radius: 1rem;
    padding: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .item:hover > div {
    transform: translateZ(10px);
  }

  .slide-track:hover {
    animation-play-state: paused;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-90px * 11));
    }
  }
</style>
